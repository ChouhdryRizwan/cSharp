@model List<Student>

<h2>Students with Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Course</th>
            <th>Phone</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Course?.CourseName</td> <!-- Safe access -->
                <td>@student.PhoneNumber</td>
                <td>
                    <img src="~/images/@student.image" width="50" />
                </td>
            </tr>
        }
    </tbody>
</table>
